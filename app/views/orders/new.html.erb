<h2>Nova Ordem de Servi√ßo</h2>

<%= form_with(model: @order) do |f| %>
  <div>
    <%= f.label :origin_address %>
    <%= f.text_field :origin_address %>
    <%= @order.errors.full_messages_for(:origin_address)[0] if @order.errors.full_messages_for(:origin_address).any? %>
  </div>
  <div>
    <%= f.label :product_length %>
    <%= f.number_field :product_length, step: 0.01 %>
    <%= @order.errors.full_messages_for(:product_length)[0] if @order.errors.full_messages_for(:product_length).any? %>
  </div>
  <div>
    <%= f.label :product_height %>
    <%= f.number_field :product_height, step: 0.01 %>
    <%= @order.errors.full_messages_for(:product_height)[0] if @order.errors.full_messages_for(:product_height).any? %>
  </div>
  <div>
    <%= f.label :product_width %>
    <%= f.number_field :product_width, step: 0.01 %>
    <%= @order.errors.full_messages_for(:product_width)[0] if @order.errors.full_messages_for(:product_width).any? %>
  </div>
  <div>
    <%= f.label :product_weight %>
    <%= f.number_field :product_weight, step: 0.01 %>
    <%= @order.errors.full_messages_for(:product_weight)[0] if @order.errors.full_messages_for(:product_weight).any? %>
  </div>
  <div>
    <%= f.label :destination_address %>
    <%= f.text_field :destination_address %>
    <%= @order.errors.full_messages_for(:destination_address)[0] if @order.errors.full_messages_for(:destination_address).any? %>
  </div>
  <div>
    <%= f.label :shipping_company_id, 'Transportadora' %>
    <%= f.collection_select :shipping_company_id, @shipping_companies, :id, :brand_name %>
  </div>
  <div>
    <%= f.submit 'Enviar' %>
  </div>
  
<% end %>